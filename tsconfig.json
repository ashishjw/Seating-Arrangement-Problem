{
    "compilerOptions": {
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
      "baseUrl": "./",
      "target": "es5",
      "jsx": "react",
      "experimentalDecorators": true,
      "allowJs": false,
      "downlevelIteration": true,
      "outDir": "build/",
      "lib": [
        "es5",
        "es6",
        "dom",
        "scripthost"
      ],
      "typeRoots": [
        "../node_modules/@types/",
        "./@types/"
      ],
      "paths": {
        "*": [
          "./@types/*",
          "*"
        ]
      }
    },
    "include": [
      // This is needed for vsCode support
      "**/*"
    ]
  }
  